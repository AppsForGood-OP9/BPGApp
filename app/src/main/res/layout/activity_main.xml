<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="645dp"
        android:text="@string/promptEntry"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/BloodGlucoseButton"
        android:layout_width="313dp"
        android:layout_height="174dp"
        android:layout_marginBottom="300dp"
        android:backgroundTint="@color/blue"
        android:text="@string/glucoseButton"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BloodSymbolButton"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/BloodSymbolButton"
        android:layout_width="161dp"
        android:layout_height="174dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="300dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/blood_drop" />

    <ImageButton
        android:id="@+id/HeartSymbolButton"
        android:layout_width="161dp"
        android:layout_height="174dp"
        android:layout_marginEnd="50dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/BloodSymbolButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Prompt"
        app:srcCompat="@drawable/blood_pressure" />

    <Button
        android:id="@+id/BloodPressureButton"
        android:layout_width="313dp"
        android:layout_height="174dp"
        android:backgroundTint="@color/pink"
        android:text="@string/pressureButton"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/BloodGlucoseButton"
        app:layout_constraintEnd_toStartOf="@+id/HeartSymbolButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Prompt" />

    <ImageButton
        android:id="@+id/HomeButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_bottom_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/home_button_foreground" />

    <ImageButton
        android:id="@+id/BellButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_bottom_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/bell_button_foreground" />

    <ImageButton
        android:id="@+id/AddButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/round_bottom_buttons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BellButton"
        app:layout_constraintStart_toEndOf="@+id/HomeButton"
        app:srcCompat="@drawable/add_button_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>