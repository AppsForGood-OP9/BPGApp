<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/bp_text_view"
            android:textSize="36sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bp_edit"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_edit_button_foreground"
            android:contentDescription="@+id/bp_edit" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bp_delete"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_delete_button_foreground"
            android:contentDescription="@+id/bp_delete" />


    </LinearLayout>

</androidx.cardview.widget.CardView>